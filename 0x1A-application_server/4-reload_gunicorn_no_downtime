#!/usr/bin/env bash
# This script gracefully reloads the Gunicorn process

# Get the PID of the Gunicorn master process
PID=$(pgrep -f 'gunicorn.*master')

if [ -n "$PID" ]; then
  echo "Reloading Gunicorn (PID: $PID)..."
  kill -HUP "$PID"
  echo "Gunicorn reloaded successfully."
else
  echo "Gunicorn master process not found."
fi

